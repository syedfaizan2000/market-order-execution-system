  "components": {
    "schemas": {
      "Order": {
        "required": [
          "orderType",
          "symbol"
        ],
        "type": "object",
        "properties": {
          "orderId": {
            "type": "integer",
            "format": "int64"
          },
          "symbol": {
            "maxLength": 20,
            "minLength": 1,
            "type": "string"
          },
          "orderType": {
            "maxLength": 10,
            "minLength": 1,
            "type": "string"
          },
          "quantity": {
            "maximum": 2147483647,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "price": {
            "minimum": 0.01,
            "type": "number",
            "format": "double"
          },
          "status": {
            "maxLength": 20,
            "type": "string",
            "nullable": true
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "tradeLogs": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TradeLog"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "PlaceOrderRequest": {
        "type": "object",
        "properties": {
          "symbol": {
            "type": "string",
            "nullable": true
          },
          "orderType": {
            "type": "string",
            "nullable": true
          },
          "quantity": {
            "type": "integer",
            "format": "int32"
          },
          "price": {
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      },
      "TradeLog": {
        "required": [
          "symbol"
        ],
        "type": "object",
        "properties": {
          "tradeId": {
            "type": "integer",
            "format": "int64"
          },
          "orderId": {
            "type": "integer",
            "format": "int64"
          },
          "order": {
            "$ref": "#/components/schemas/Order"
          },
          "symbol": {
            "maxLength": 20,
            "minLength": 1,
            "type": "string"
          },
          "executedPrice": {
            "type": "number",
            "format": "double"
          },
          "quantity": {
            "type": "integer",
            "format": "int32"
          },
          "timeExecuted": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      }
    }
  }
